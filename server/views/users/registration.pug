extends ../layout/index

block content      
  .container#registration
    .row
      .col-sm-8
        h1 Register #{current}
        if success
         .alert.alert-success
           | Successful Registration!   
        .panel.panel-default
          .panel-body
            form(method="POST", action="/users/registration")
              .form-group
                label(for='inputName') Name
                input#inputName.form-control(type='text', name='username', aria-describedby='nameHelp', placeholder='Enter name', required, minlength=3)
                small#nameHelp.form-text.text-muted This name will appear on the quotation.

              .form-group
                label(for='inputEmail') Email address
                input#inputEmail.form-control(type='email', name='email', aria-describedby='emailHelp', placeholder='Enter email', required)
                small#emailHelp.form-text.text-muted This will be used for logging in
              .form-group
                label(for='inputPassword') Password
                input#inputPassword.form-control(type='password', name='password', placeholder='Password', required, minlength=6)
                small#emailHelp.form-text.text-muted At least 6 characters.

              button.btn.btn-primary(type='submit') Submit